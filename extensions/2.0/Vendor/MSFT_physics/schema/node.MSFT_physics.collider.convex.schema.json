{
    "$schema" : "http://json-schema.org/draft-04/schema",
    "title" : "MSFT_physics glTF extension",
    "type" : "object",
    "description" : "Parameters describing a convex collider.",
    "allOf" : [ { "$ref" : "glTFProperty.schema.json" } ],
    "properties" : {
        "mesh" : {
            "description": "The ID of the mesh from which to build the convex hull.",
            "allOf": [{"$ref": "glTFid.schema.json"}]
        },
        "isHollow": {
            "type": "boolean",
            "default": false,
            "description": "Specifies whether the collider is hollow instead of solid."
        },
        "extensions" : {},
        "extras" : {}
    },
    "required": ["mesh"]
}
