{
    "$schema" : "http://json-schema.org/draft-04/schema",
    "title" : "MSFT_physics glTF extension",
    "type" : "object",
    "description" : "Physics properties for a scene.",
    "allOf" : [ { "$ref" : "glTFChildOfRootProperty.schema.json" } ],
    "properties" : {
        "gravity" : {
            "type": "array",
            "description" : "Gravitational acceleration applied to all rigid bodies.",
            "items": {
                "type": "number"
            },
            "minItems": 3,
            "maxItems": 3,
            "default": [ 0.0, -9.81, 0.0 ]
        }
    }
}
